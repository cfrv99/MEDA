@model IEnumerable<Ministry.BlogPage.Entities.RuleFiles>

@{
    ViewData["Title"] = "GetRules";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Qanunvericilik</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Blank Page</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card-body">
            <a class="btn btn-success mb-3" href="/Admin/Manager/AddRules">Əlavə Et</a>
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Link</th>
                        <th>Tip</th>
                        <th>Basliq</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a target="_blank" href="@item.Link">@item.Link</a></td>
                            <td>
                                @item.Type.ToString()
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                <a href="/Admin/Manager/DeleteRule/@item.Id" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }


                </tbody>
                <tfoot>
                    <tr>
                        <th>Link</th>
                        <th>Tip</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>


    </section>
    <!-- /.content -->
</div>
