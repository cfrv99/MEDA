@model List<Ministry.BlogPage.Entities.RuleFiles>
@{
    ViewData["Title"] = "GetRules";
}

<main>
    <div class="col-md-9 rules">
        <h4 class="section_header">Qanunvericilik</h4>

        <!-- Qanunvericilik -->
        <div class="rules_tab">
            <input class="rules_input" type="checkbox" id="chck1">
            <label class="rules_label" for="chck1">Qanunvericilik</label>
            <div class="rules_tabContent">
                <ul class="rules_list">
                    @foreach (var rule in Model.Where(i => i.Type == Ministry.BlogPage.Entities.RuleType.Qanunvericilik))
                    {
                        <li>
                            <a href="@rule.Link" target="_blank">
                               @rule.Title
                            </a>
                        </li>
                    }


                </ul>
            </div>
        </div>

