@model List<Ministry.BlogPage.Entities.Announcement>
@{
    ViewData["Title"] = "GetMediaBlogs";
}
@using Ministry.BlogPage.Helpers;

<main>
    <div class="col-md-9 announcement">
        <h4 class="section_header">Elanlar</h4>
        <ul class="announcement_container">
            <!-- #1 -->
            @foreach (var item in Model)
            {
                <li class="announcement_data">
                    <a href="/@Html.CurrentLanguage()/MEDA/Medialar/@item.Slug/@item.Id">
                        <img src="~/img/@item.MainUrl" alt="img1-12">
                        <p class="announcement_date">@item.CreatedDate.ToString("dd MMMM yyyy")</p>
                        <p class="announcement_description">@item.ShortDescription.Substring(0,30)</p>
                    </a>
                </li>
            }



        </ul>
    </div>
</main>

